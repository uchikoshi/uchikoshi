%section
  %p= @stage.name  
  %p
    %time{:datetime=>@stage.start_time.to_date}
      =l @stage.start_time.to_date,:format => :long
  %p
    %time{:datetime=>@stage.start_time}
      =l @stage.start_time,:format => :short
  %p= @stage.description

%section
  %table
    %th 
    - @stage.musics.each do |music|
      %th=music.name 
    - @members.each do |member|
      %tr
        %td=member.first_name
        - @stage.continuities.each do |continuity|
          %td= position(continuity, member).join(" ")
            